@model App.Entities.Models.Transaksi
@{
	ViewBag.Title = "Kwitansi";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<input type="button" id="kwt" value="Print Kwitansi" class="btn btn-default" />
<div id="detail" style="padding-left:50px">
	<br />
