@model App.Entities.Models.Transaksi
@{

	ViewBag.Title = "Kwitansi";
	Layout = "~/Views/Shared/_Layout.cshtml";

	/**/
	/**/

	ViewBag.Title = "Kwitansi";
	Layout = "~/Views/Shared/_Layout.cshtml";

}
<input type="button" id="kwt" value="Print Kwitansi" class="btn btn-default" />

@Html.HiddenFor(model => model.Nosisda)

<div id="detail" style="padding-left:50px">

	<div width="90%" height="30%" style="padding-left:50px">
		<table width="100%" height="30%" style="border-top: 1px solid black" border=0>
			<tr>
				<td colspan="3" height="10px" style="border-bottom:1px solid black">
					<font size="1px"> Sekolah Islam Terpadu Darul Abidin</font>
				</td>
				<td colspan="3" height="10px" style="border-bottom:1px solid black;border-left: 3px dotted black">
					<font size="1px"> Sekolah Islam Terpadu Darul Abidin</font>
				</td>
			</tr>
			<tr>
				<td colspan="3" align="center"><font size="1px">KWITANSI PEMBAYARAN SPP DAN ADMINISTRASI</font></td>
				<td colspan="3" align="center" style="border-left: 3px dotted black"><font size="1px">KWITANSI PEMBAYARAN SPP DAN ADMINISTRASI</font></td>
			</tr>
			@*No kwitansi*@
			<tr height="10px">
				<td colspan="3"><font size="1px">@Html.DisplayNameFor(model => model.Nokwitansi) : @Html.DisplayFor(model => model.Nokwitansi) </font></td>
				<td colspan="3" style="border-left: 3px dotted black"><font size="1px">@Html.DisplayNameFor(model => model.Nokwitansi) : @Html.DisplayFor(model => model.Nokwitansi)</font></td>
			</tr>
			@*nama siswa*@
			<tr height="10px">
				<td colspan="3"><font size="1px">@Html.DisplayNameFor(model => model.Namasiswa) : @Html.DisplayFor(model => model.Namasiswa) </font></td>
				<td colspan="3"><font size="1px" style="border-left: 3px dotted black">@Html.DisplayNameFor(model => model.Namasiswa) : @Html.DisplayFor(model => model.Namasiswa) </font></td>
			</tr>
			@*no sisda*@
			<tr height="10px">
				<td colspan="3"><font size="1px">&nbsp;@Html.DisplayNameFor(model => model.Nosisda) : @Html.DisplayFor(model => model.Nosisda) | @Html.DisplayFor(model => model.Kelastingkat)</font></td>
				<td colspan="3"><font size="1px" style="border-left: 3px dotted black">&nbsp;@Html.DisplayNameFor(model => model.Nosisda) : @Html.DisplayFor(model => model.Nosisda) | @Html.DisplayFor(model => model.Kelastingkat)</font></td>
			</tr>
			<tr height="10px">
				<td colspan="3">&nbsp;</td>
				<td colspan="3" style="border-left: 3px dotted black">&nbsp;</td>
			</tr>
			@*Biaya Masuk*@
			<tr height="10px">
				<td colspan="3"><font size="1px">@Html.DisplayNameFor(model => model.bayarBM): Rp.@Html.DisplayFor(model => model.bayarBM) </font></td>
				<td colspan="3"><font size="1px" style="border-left: 3px dotted black">@Html.DisplayNameFor(model => model.bayarBM): Rp.@Html.DisplayFor(model => model.bayarBM)</font></td>
			</tr>

			@*spp*@
			<tr height="10px">
				<td colspan="2"> <font size="1px" >@Html.DisplayNameFor(model => model.bulanspp) || @Html.DisplayNameFor(model => model.bayarspp) : </font></td>


				@if (Model.infospp != null)
				{

					<td >
						@Html.DisplayFor(model => model.infospp)
					</td>

				}
				else
				{
					<td align="center">
						<font size="1px" >
							@Html.DisplayFor(model => model.bulanspp) || Rp.@Html.DisplayFor(model => model.bayarspp)
						</font>
					</td>
				}

				<td colspan="3"><font size="1px" style="border-left: 3px dotted black">@Html.DisplayNameFor(model => model.bulanspp) || @Html.DisplayNameFor(model => model.bayarspp) : </font></td>


				@if (Model.infospp != null)
				{

					<td>
						@Html.DisplayFor(model => model.infospp)
					</td>

				}
				else
				{
					<td>
						<font size="1px">
							@Html.DisplayFor(model => model.bulanspp) || Rp.@Html.DisplayFor(model => model.bayarspp)
						</font>
					</td>
				}
			</tr>

			@*KS*@
			<tr height="10px">
				<td colspan="3"><font size="1px">KS : Rp.10.000,- || February</font></td>
				<td colspan="3"><font size="1px" style="border-left: 3px dotted black">KS : Rp.10.000,- || February</font></td>
			</tr>
			@*school support*@
			<tr height="10px">
				<td colspan="3"><font size="1px">@Html.DisplayNameFor(model => model.SSId) || @Html.DisplayNameFor(model => model.nominal) : @Html.DisplayFor(model => model.JenisSS) || @Html.DisplayFor(model => model.nominal)</font></td>
				<td colspan="3"><font size="1px" style="border-left: 3px dotted black">@Html.DisplayNameFor(model => model.SSId) || @Html.DisplayNameFor(model => model.nominal) : @Html.DisplayFor(model => model.JenisSS) || @Html.DisplayFor(model => model.nominal)</font></td>
			</tr>
			<tr height="10px">
				<td colspan="3" height="10px" style="border-bottom:1px solid black; "></td>
				<td colspan="3" height="10px" style="border-bottom:1px solid black;border-left: 3px dotted black"></td>
			</tr>
			@*total*@
			<tr height="30px">
				<td width="30%"><font size="1px">@Html.DisplayNameFor(model => model.totalkeseluruhan) : Rp.@Html.DisplayFor(model => model.totalkeseluruhan)</font></td>
				<td><font size="1px"> Oleh </font></td>
				<td><font size="1px">Kasir</font></td>
				<td width="30%"><font size="1px" style="border-left: 3px dotted black">@Html.DisplayNameFor(model => model.totalkeseluruhan) : Rp.@Html.DisplayFor(model => model.totalkeseluruhan)	</font></td>
				<td><font size="1px"> Oleh </font></td>
				<td><font size="1px">Kasir</font></td>
			</tr>
			@*uang bayar*@
			<tr height="10px">
				<td width="30%"><font size="1px">Uang Bayar : Rp.1.000.000,-</font></td>
				<td><font size="1px">  </font></td>
				<td><font size="1px"></font></td>
				<td width="30%"><font size="1px" style="solid black;border-left: 3px dotted black">Uang Bayar : Rp.1.000.000,-	</font></td>
				<td><font size="1px"> </font></td>
				<td><font size="1px"></font></td>
			</tr>
			@*kembalian*@
			<tr height="10px">
				<td width="30%"><font size="1px">Kembalian :</font></td>
				<td><font size="1px">  </font></td>
				<td><font size="1px"></font></td>
				<td width="30%"><font size="1px" style="border-left: 3px dotted black">Kembalian : </font></td>
				<td><font size="1px"> </font></td>
				<td><font size="1px"></font></td>
			</tr>
			<tr height="10px">
				<td colspan="3" height="10px" style="border-bottom:1px solid black; "></td>
				<td colspan="3" height="10px" style="border-bottom:1px solid black;border-left: 3px dotted black"></td>
			</tr>

			<tr height="10px">
				<td colspan="3">
					<font size="1px">
						Dengan ditandatanganinya kwitansi ini,
						maka sekolah dan pemohon setuju atas data transaksi yang tertera di atas.
						Mohon disimpan hingga pembayaran berikutnya. Terima Kasih.
					</font>
				</td>
				<td colspan="3">
					<font size="1px" style="border-left: 3px dotted black">
						Dengan ditandatanganinya kwitansi ini,
						maka sekolah dan pemohon setuju atas data transaksi yang tertera di atas.
						Mohon disimpan hingga pembayaran berikutnya. Terima Kasih.
					</font>
				</td>
			</tr>

		</table>
	</div>
</div>

<br />
<div>
	@Html.ActionLink("Back to List", "Index", new { NamaSiswa = System.Web.HttpContext.Current.Session["NamaSiswa"] })
</div>


<script>
	$('#kwt').click(function () {
		$("#detail").printThis();
	});

</script>
