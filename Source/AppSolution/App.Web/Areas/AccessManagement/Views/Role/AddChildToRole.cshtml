@model App.Web.Areas.AccessManagement.Models.AddChildToRoleFormVM


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Role Child</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.RoleIdChild, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.RoleIdChild, Model.Roles(), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.RoleIdChild, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(model => model.RoleId, Model.RoleId)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
