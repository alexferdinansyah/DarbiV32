@model App.Web.Areas.Recapitulation.Models.SearchRekapBiayaMasuk

@{
	ViewBag.Title = "Rekap Biaya Masuk";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@Html.Partial("Search", Model)

<table id="tableRekapBiayaMasuk" class="table" style="width:100%">
	<thead>
		<tr>
			<th>No</th>
			<th>No Sisda</th>
			<th>Nama Siswa</th>
			<th>Jenjang</th>
			<th>Tingkat</th>
			<th>Periode</th>
			<th>Tanggal History</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody></tbody>
</table>

<script type="text/javascript">
	$(document).ready(function () {


		var tableRekapBiayaMasuk = $('#tableRekapBiayaMasuk').dataTable({
			"scrollX": true,
			"processing": true,
			"sProcessing": true,
			"bLengthChange": true,
			//"sLoadingRecords":true,
			"scrollCollapse": true,
			"searching": false,
			"bServerSide": true,
			"ordering": false,
			"sAjaxSource": "/Recapitulation/RekapBiayaMasuk/AjaxRekapBiayaMasuk?format=JSON",
			"bProcessing": true,
			oLanguage: { sProcessing: "<div id='loader'></div>" },
			"fnServerParams": function (aoData) {
				formdata = $('#Req').serializeArray()
				aoData.push(
					{ "name": "Nosisda", "value": $('#Nosisda').val() },
					{ "name": "Namasiswa", "value": $('#Namasiswa').val() },
					{ "name": "Jenjang", "value": $('#Jenjang').val() },
					{ "name": "Tingkat", "value": $('#Tingkat').val() },
					{ "name": "periode", "value": $('#periode').val() },
					{ "name": "tanggalhistory", "value": $('#tanggalhistory').val() }

				);
			},
			"aoColumns": [
				{
					"render": function (data, type, row, meta) {
						return data;
					}
				},
				{ "sNosisda": "Nosisda" },
				{ "sNamasiswa": "Namasiswa" },
				{ "sJenjang": "Jenjang" },
				{ "sTingkat": "Tingkat" },
				{ "speriode": "periode" },
				{ "stanggalhistory": "tanggalhistory" },
				{
					"render": function (data, type, row, meta) {
						if (type === 'display') {
							var x = '<a href="Recapitulation/RekapBiayaMasuk/Details?id=' + data + '">Details</a> | ';
							x += '<a href="/Recapitulation/RekapBiayaMasuk/Edit?id=' + data + '">Edit</a> | ';
							x += '<a href="/Recapitulation/RekapBiayaMasuk/Delete?id=' + data + '">Delete</a>';
						}

						return x;
					}
				}
			]
		});

		$('#btnsearch').click(function () {
			tableRekapBiayaMasuk.fnDraw(null);
		});

	});
</script>